@model List<HotelProject.WebUI.Models.Role.RoleAssignViewModel>
@{
    ViewData["Title"] = "AssingRole";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Role Atama Sayfası</h1>
<form method="post">
    @for(int i=0 ; i<Model.Count;i++){
        <br />
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleID"/>
            <input type="hidden" asp-for="@Model[i].RoleName"/>
            <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input"/>
            <label class="form-check-label" for="@Model[i].RoleExist">@Model[i].RoleName</label>
        </div>

    }
    <br />
    <button claas="btn btn-success">Rolleri Güncelle</button> 





</form>
